<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="20"
    android:background="@color/darkGrey"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_BillAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:inputType="number"
        android:maxLength="6"
        android:padding="@dimen/padding_textView_default"
        android:textStyle="bold"
       />

    <TextView
        android:id="@+id/textView_BillAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:background="@color/lightGrey"
        android:hint="@string/textView_billAmountHint"
        android:labelFor="@+id/editText_BillAmount"
        android:padding="@dimen/padding_textView_default"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="Enter Amount"/>
    <TextView
        android:id="@+id/percentageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGrey"
        android:textSize="20sp"
        android:layout_column="0"
        android:layout_row="1"
        android:text="10%"
        />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:max="50"
        android:min="10" />


    <TextView
        android:id="@+id/tipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="3"
        android:textColor="@color/lightGrey"
        android:labelFor="@+id/editText_BillAmount"
        android:textSize="20sp"
        android:text="Tip"
        android:layout_marginLeft="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tipTV"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_marginLeft="80dp"
        android:layout_row="3"
        android:background="@color/lightGrey"
        android:gravity="center"
        android:text="$0.00"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/totalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGrey"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_column="0"
        android:layout_row="4"
        android:text="Total" />

    <TextView
        android:id="@+id/totalTV"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_column="1"
        android:layout_marginLeft="80dp"
        android:gravity="center"
        android:layout_row="4"
        android:background="@color/lightGrey"
        android:textStyle="bold"
        android:text="$0.00" />

    <TextView
        android:id="@+id/spinnerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:textColor="@color/lightGrey"
        android:textSize="20sp"
        android:text="Split by"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        android:layout_column="1"
        android:layout_row="6" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="10" >

        <RadioButton
            android:id="@+id/noRButton"
            android:layout_width="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No" />

        <RadioButton
            android:id="@+id/tipRButton"
            android:layout_width="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tip" />

        <RadioButton
            android:id="@+id/totalRButton"
            android:onClick="onRadioButtonClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total" />
    </RadioGroup>

    <TextView
        android:id="@+id/perPersonLabel"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="11"
        android:text="Each"
        android:textColor="@color/lightGrey"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/perPersonTV"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_marginLeft="80dp"
        android:layout_row="11"
        android:background="@color/lightGrey"
        android:gravity="center"
        android:text="$0.00"
        android:textStyle="bold" />

</GridLayout>